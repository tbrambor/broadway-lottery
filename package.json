{
  "name": "broadway-lottery-automation",
  "version": "2.0.0",
  "description": "Automated Broadway lottery entry system supporting both Broadway Direct and Telecharge platforms with auto-discovery, interactive configuration, and GitHub Actions integration",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "playwright": "playwright test",
    "test:headed": "playwright test",
    "test:headless": "CI=true playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "discover-telecharge": "tsx src/discover-telecharge-shows.ts",
    "discover-broadway-direct": "tsx src/discover-broadway-direct-shows.ts",
    "discover-all": "tsx src/discover-telecharge-shows.ts && tsx src/discover-broadway-direct-shows.ts",
    "configure-shows": "tsx scripts/configure-shows.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tbrambor/broadway-lottery-automation.git"
  },
  "keywords": [
    "broadway",
    "lottery",
    "automation",
    "playwright",
    "telecharge",
    "broadway-direct",
    "ticket-automation",
    "theater",
    "musical"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tbrambor/broadway-lottery-automation/issues"
  },
  "homepage": "https://github.com/tbrambor/broadway-lottery-automation#readme",
  "devDependencies": {
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-typescript": "^7.23.2",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "1.56.0",
    "@types/node": "^20.8.7",
    "jest": "^29.7.0",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2"
  },
  "babel": {
    "presets": [
      "@babel/typescript",
      "@babel/preset-env"
    ]
  },
  "jest": {
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  }
}
